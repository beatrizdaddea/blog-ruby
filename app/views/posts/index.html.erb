<p style="color: green"><%= notice %></p>

<h1>Posts do Blog</h1>
<table>
<thead>
  <tr> 
    <th> Title</th>
    <th> Description</th>
    <th colspan =" 3"> </th>
  </tr>
</thead>



<div id="posts">
  <% @posts.each do |post| %>   <%# para cada post vai mostrar um titulo e descrição %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>
</table>
<%= link_to "New post", new_post_path %>
<%= link_to "Voltar", root_path %>
